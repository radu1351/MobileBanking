<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.vinaygaba.creditcardview.CreditCardView
        android:id="@+id/addCardDiag_card"
        android:layout_width="300sp"
        android:layout_height="185sp"
        app:cardName="John Terry"
        app:cardNameTextColor="#cccccc"
        app:cardNumber="5500005555555559"
        app:cardNumberFormat="all_digits"
        app:cardNumberTextColor="#cccccc"
        app:expiryDate="02/22"
        app:expiryDateTextColor="#cccccc"
        app:hintTextColor="#cccccc"
        app:isEditable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:putChip="true"
        app:type="visa"
        app:validTillTextColor="#cccccc"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/addCardDiag_tvCardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38sp"
        android:layout_marginTop="7sp"
        android:text="Card Type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addCardDiag_card"  />

    <Spinner
        android:id="@+id/addCardDiag_spinCardType"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="38sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="35sp"
        android:background="@drawable/background_spinner"
        android:entries="@array/card_type_array"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addCardDiag_tvCardType" />

    <TextView
        android:id="@+id/addCardDIag_tvDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="38sp"
        android:layout_marginEnd="35sp"
        android:layout_marginBottom="10sp"
        android:textSize="14sp"
        android:text="@string/delivery_message"
        app:layout_constraintTop_toBottomOf="@id/addCardDiag_spinCardType"/>
</androidx.constraintlayout.widget.ConstraintLayout>