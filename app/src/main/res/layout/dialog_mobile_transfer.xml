<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/mobileTransferDiag_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/mobileTransferDiag_ivTransfer"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/mobileTransferDiag_tvRecPhone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mobile_transfer" />


            <TextView
                android:id="@+id/mobileTransferDiag_tvRecPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:text="Recipient Phone Number"
                app:layout_constraintBottom_toTopOf="@id/mobileTransferDiag_tilRecPhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_ivTransfer" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobileTransferDiag_tilRecPhone"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tvRecPhone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileTransferDiag_tietRecPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_color"
                    android:inputType="text"
                    android:paddingBottom="10sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/mobileTransferDiag_tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:text="Amount (RON)"
                app:layout_constraintBottom_toTopOf="@id/mobileTransferDiag_tilAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tilRecPhone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobileTransferDiag_tilAmount"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobileTransferDiag_tvAmount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileTransferDiag_tietAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_color"
                    android:inputType="numberDecimal"
                    android:paddingBottom="10sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/mobileTransferDiag_tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:text="Description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tilAmount" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobileTransferDiag_tilDesciption"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobileTransferDiag_tvDescription">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileTransferDiag_tietDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_color"
                    android:paddingBottom="10sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/mobileTransferDiag_tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:text="Transfer Type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tilDesciption" />

            <RadioGroup
                android:id="@+id/mobileTransferDiag_rgTransferType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tvType">


                <RadioButton
                    android:id="@+id/mobileTransferDiag_rbNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Normal Transfer" />


                <RadioButton
                    android:id="@+id/mobileTransferDiag_rbInstant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instant Transfer" />


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="14sp"
                android:text=" + 2.5 RON"
                android:textColor="#FF0000"
                app:layout_constraintStart_toEndOf="@id/mobileTransferDiag_rgTransferType"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tvType" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="63sp"
                android:text=" + 5 RON"
                android:textColor="#FF0000"
                app:layout_constraintStart_toEndOf="@id/mobileTransferDiag_rgTransferType"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tvType" />


            <TextView
                android:id="@+id/mobileTransferDiag_tvTotalTransfered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="To be transferred: 0.0 RON"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_rgTransferType" />

            <TextView
                android:id="@+id/mobileTransferDiag_tvTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30sp"
                android:text="Total transfer cost: 0.0 RON"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobileTransferDiag_tvTotalTransfered" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
