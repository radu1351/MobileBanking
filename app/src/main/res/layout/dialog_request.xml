<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp" />

    <TextView
        android:id="@+id/requestDiag_tvSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Terry"
        android:textSize="15sp"
        android:layout_marginStart="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender IBAN"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp" />

    <TextView
        android:id="@+id/requestDiag_tvSenderIban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RO08BTLRONCRT0279971"
        android:textSize="15sp"
        android:layout_marginStart="20sp" />

    <TextView
        android:id="@+id/requestDiag_tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/requestDiag_tilAmount"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="20sp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/requestMoneyFrag_tietAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:inputType="numberDecimal"
            android:paddingBottom="10sp" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
