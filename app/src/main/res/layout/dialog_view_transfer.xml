<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender IBAN"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"/>

    <TextView
        android:id="@+id/viewTransactionDialog_tvSenderIban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:text="RO08BTRLRONCRT0279974"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipient IBAN"
        android:textStyle="bold"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/viewTransactionDialog_tvRecipientIban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:text="RO08BTRLRONCRT0259824"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textStyle="bold"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/viewTransactionDialog_tvAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:textColor="@android:color/black"
        android:text="500 RON"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commission"
        android:textStyle="bold"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/viewTransactionDialog_tvCommission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:textColor="@android:color/black"
        android:text="5.0 RON"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/viewTransactionDialog_tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant bill"
        android:textSize="16sp"
        android:layout_marginStart="10sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/viewTransactionDialog_tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 Apr 2023 18:42"
        android:textSize="16sp"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="20sp">
    </TextView>

</LinearLayout>