<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310sp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundbackground_listview">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:gravity="center_vertical|start"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lvCredit_tvLoanedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10sp"
            android:text="@string/loaned_amount"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvCredit_tvMaturityDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8sp"
            android:text="@string/maturity_date"
            android:textSize="11sp" />

    </LinearLayout>

    <Button
        android:id="@+id/lvCredit_btViewCredit"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/red"
        android:text="View"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

