<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/roundbackground_listview"
    >

    <TextView
        android:id="@+id/lvTransactions_merchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrefour"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/lvTransactions_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Apr"
        android:textSize="12sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvTransactions_merchant"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/lvTransactions_ammount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-500 RON"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginStart="40sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>